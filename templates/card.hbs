{{#each productos}}

    <div class='card'>
        <article class='card__article'>
            <div class='img card__image-container'>
            <img src='{{foto}}' alt='{{nombre}}' class='img card__image' />
            </div>
            <div class='card__content'>
            <h2 class='card__heading'>{{nombre}}</h2>
            <div class='card__description'>
                <p>{{descripcion}}</p>
            </div>
            <div class='card__footer'>
                <span class='card__heading'>{{precio}}</span>
            </div>
            </div>
        </article>
    </div><!--? .card -->



{{/each}}